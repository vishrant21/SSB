<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_item_shape.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <!-- Define your custom background for the selected item here -->
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Change the color to your desired color -->
            <corners android:radius="16dp" /> <!-- Change the shape as needed -->
        </shape>
    </item>
    <item android:state_checked="false">
        <!-- Define the background for unselected items here if needed -->
    </item>
</selector>
